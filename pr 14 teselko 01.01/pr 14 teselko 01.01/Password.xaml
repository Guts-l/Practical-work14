<Window x:Class="pr_14_teselko_01._01.Password"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pr_14_teselko_01._01"
        mc:Ignorable="d"
        Title="Login" Height="160" Width="154" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Activated="Window_Activated">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="21,9,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="94"><Run Language="ru-ru" Text="Введите пароль: "/></TextBlock>
        <Button IsDefault="True" x:Name="login" Content="Ввести" HorizontalAlignment="Left" Margin="20,54,0,0" VerticalAlignment="Top" Width="90" Click="login_Click"/>
        <Button IsCancel="False" x:Name="exit" Content="Отмена" HorizontalAlignment="Left" Margin="20,89,0,0" VerticalAlignment="Top" Width="90" Click="exit_Click"/>
        <PasswordBox  x:Name="inputPass" HorizontalAlignment="Left" Margin="20,26,0,0" VerticalAlignment="Top" Width="90" Height="20"/>

    </Grid>
</Window>
